};

struct UserInfo {
  /* quota tracking */
  time_t time;
  time_t last;
  int consumed;
  char status;
#ifdef HAVE_LIBLDAP
  /* LDAP tracking */
  int ldapuser;                        /* bool: 1 if user loaded from LDAP */
  int found;                   /* bool: we also cache if not found in LDAP */
